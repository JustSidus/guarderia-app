@model GuarderiaApp.Models.Niño

@{
    ViewData["Title"] = "Editar Niño";
}

<h2>@ViewData["Title"]</h2>

<h3>Editar Niño</h3>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
    </div>
    <div class="form-group">
        <label for="FechaNacimiento">Fecha de Nacimiento</label>
        <input type="date" class="form-control" id="FechaNacimiento" name="FechaNacimiento" value="@Model.FechaNacimiento.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="form-group">
        <label for="FechaIngreso">Fecha de Ingreso</label>
        <input type="date" class="form-control" id="FechaIngreso" name="FechaIngreso" value="@Model.FechaIngreso.ToString("yyyy-MM-dd")" required />
    </div>
    <div class="form-group">
        <label for="NumeroMatricula">Número de Matrícula</label>
        <input type="number" class="form-control" id="NumeroMatricula" name="NumeroMatricula" value="@Model.NumeroMatricula" required />
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

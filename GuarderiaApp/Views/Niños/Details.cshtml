@model GuarderiaApp.Models.Niño

<h2>Detalles del Niño</h2>

<div>
    <p><strong>Matrícula:</strong> @Model.NumeroMatricula</p>
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Fecha de nacimiento:</strong> @Model.FechaNacimiento.ToShortDateString()</p>
    <p><strong>Fecha de ingreso:</strong> @Model.FechaIngreso.ToShortDateString()</p>
    <p><strong>Alergias:</strong> @Model.Alergias</p>
</div>

<h4>Personas Autorizadas</h4>
@if (Model.PersonasAutorizadas != null && Model.PersonasAutorizadas.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Cédula</th>
                <th>Teléfono</th>
                <th>Relación</th>
                <th>Responsable Pago</th>
                <th>Cuenta Bancaria</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.PersonasAutorizadas)
            {
                <tr>
                    <td>@p.Nombre</td>
                    <td>@p.Cedula</td>
                    <td>@p.Telefono</td>
                    <td>@p.Relacion</td>
                    <td>@(p.EsResponsablePago ? "Sí" : "No")</td>
                    <td>@(p.EsResponsablePago ? p.CuentaBancaria : "-")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay personas autorizadas registradas.</p>
}

@model IEnumerable<GuarderiaApp.Models.Niño>

@{
    ViewData["Title"] = "Lista de Niños";
}

<h2>Lista de Niños</h2>

<table class="table">
    <thead>
        <tr>
            <th>Matrícula</th>
            <th>Nombre</th>
            <th>Fecha de Nacimiento</th>
            <th>Fecha de Ingreso</th>
            <th>Alergias</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var niño in Model)
        {
            <tr>
                <td>@niño.NumeroMatricula</td>
                <td>@niño.Nombre</td>
                <td>@niño.FechaNacimiento.ToShortDateString()</td>
                <td>@niño.FechaIngreso.ToShortDateString()</td>
                <td>@niño.Alergias</td>
                <td>
                    <a asp-action="Details" asp-route-id="@niño.Id" class="btn btn-info btn-sm">Ver Detalles</a>
                </td>
            </tr>
        }
    </tbody>
</table>

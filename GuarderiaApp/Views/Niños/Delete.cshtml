@model GuarderiaApp.Models.Niño

@{
    ViewData["Title"] = "Eliminar Niño";
}

<h2>¿Estás seguro que deseas eliminar este niño?</h2>

<div>
    <h4>@Model.Nombre (@Model.NumeroMatricula)</h4>
    <p>Fecha de ingreso: @Model.FechaIngreso.ToShortDateString()</p>
    <p>Alergias: @Model.Alergias</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
